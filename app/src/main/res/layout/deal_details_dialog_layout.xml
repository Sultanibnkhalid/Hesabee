<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layoutDirection="ltr"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="40dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/l1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_deal_details_dialog_account_name"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14dp"

            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/l2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_deal_details_dialog_deal_amount"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_deal_details_dialog_deal_in_out"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/l2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/l3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_deal_details_dialog_deal_date"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView11"

            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="@string/str_deal_date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/l3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:id="@+id/l4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_deal_details_dialog_deal_details"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView12"

            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="@string/str_deal_details" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/l4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:id="@+id/l7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_deal_details_dialog_deal_tim"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="@string/str_time" />

        <TextView
            android:id="@+id/textView_C"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="@string/str_time" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:maxHeight="100dp"
        app:layout_constraintTop_toBottomOf="@+id/l7"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/l5"
        >


        <ImageView
            android:id="@+id/iv_deal_details_dialog_deal_img"
            android:layout_width="150dp"
            android:minHeight="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/l5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/l6"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_deal_details_dialog_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="@string/str_edit"
            android:backgroundTint="@color/white"
            android:textColor="@color/blueBlack"
            android:textSize="16sp"
            android:shadowColor="@color/blueBlack"
            android:shadowRadius="@integer/material_motion_duration_long_1"
            android:textStyle="bold|italic"

            />

        <Button
            android:id="@+id/btn_deal_details_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:shadowColor="@color/blueBlack"
            android:shadowRadius="@integer/material_motion_duration_long_1"
            android:layout_weight="1"
            android:text="@string/str_ok"
            android:backgroundTint="@color/white"
            android:textColor="@color/blueBlack"
            android:textSize="16sp"
            android:textStyle="bold|italic"


            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>